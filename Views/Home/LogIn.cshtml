@model Project.Models.Log
@{
    ViewBag.Title = "LogIn";
}
<style>
    .error{
        color:brown
    }
</style>
<h2>LogIn</h2>

@using (Html.BeginForm("LogIn", "Home", FormMethod.Post))
{
    <div>
        <label>User Info</label>
        @Html.TextBoxFor(m => m.UserId, new { @class = "form-control", placeholder = "Enter the UserId" })
        @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "error" })
        <span class="error">@TempData["mail"]</span>
    </div>
    <div>
        <label>Password</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter the Password" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
        <span class="error">@TempData["msg"]</span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Log In</button>
        <a href="@Url.Action("SignUp","Home")">SignUp</a>
    </div>
    

}